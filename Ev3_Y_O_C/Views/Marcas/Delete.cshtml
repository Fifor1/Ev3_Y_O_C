@model Ev3_Y_O_C.Models.Marca

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Marca</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreMarca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreMarca)
        </dd>
    </dl>

    <form id="deleteForm" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" id="submitButton" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<!-- Overlay para deshabilitar la pantalla y mostrar el círculo de carga -->
<div id="overlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background-color:rgba(0,0,0,0.5); z-index:1000;">
    <div style="position:absolute; top:50%; left:50%; transform:translate(-50%, -50%);">
        <div class="spinner-border text-light" role="status">
            <span class="sr-only"></span>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#deleteForm').submit(function (event) {
                event.preventDefault(); // Previene el comportamiento por defecto del formulario
                $('#overlay').show(); // Mostrar overlay

                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (data) {
                        // Redirigir o actualizar la vista
                        window.location.href = '@Url.Action("Index", "Marcas")';
                    },
                    error: function () {
                        alert('Error al eliminar la marca.');
                    },
                    complete: function () {
                        $('#overlay').hide(); // Ocultar overlay
                    }
                });
            });
        });
    </script>
}
