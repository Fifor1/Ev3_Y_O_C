@model Ev3_Y_O_C.Models.Usuario

@{
    ViewData["Title"] = "Crear";
}

<h1>Create</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formCrearUsuario" asp-action="Create">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolId" class="control-label"></label>
                <select asp-for="RolId" class="form-control" asp-items="ViewBag.RolId">
                    <option value="1">Administrador</option>
                    <option value="2">Usuario</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div id="resultado" class="mt-3"></div>
<div id="overlay" style="display:none;">Cargando...</div> <!-- Overlay -->

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('#nombreUsuario').on('input', function () {
                var nombreUsuario = $(this).val();
                if (nombreUsuario.length > 0) {

                    $('#overlay').show(); // Mostrar overlay

                    $.ajax({
                        url: '@Url.Action("VerificarNombreUsuario", "Usuarios")', 
                        type: 'GET',
                        data: { nombreUsuario: nombreUsuario },
                        success: function (data) {
                            if (data) {
                                $('#nombreUsuarioError').show();
                                $('#submitButton').prop('disabled', true);
                            } else {
                                $('#nombreUsuarioError').hide();
                                $('#submitButton').prop('disabled', false);
                            }


                        },
                        complete: function () {
                            $('#overlay').hide(); // Ocultar overlay
                        }


                    });
                } else {
                    $('#nombreUsuarioError').hide();
                    $('#submitButton').prop('disabled', false);
                }
            });

            $('#formCrearUsuario').on('submit', function (event) {
                event.preventDefault(); // Evitar el envío estándar del formulario

                if ($('#nombreUsuarioError').is(':visible')) {
                    return; // No enviar el formulario si hay un error
                }

                $('#overlay').show(); // Mostrar overlay

                $.ajax({
                    url: '@Url.Action("Create", "Usuarios")',
                    type: 'POST',
                    data: $(this).serialize(), // Serializa el formulario para enviarlo
                    success: function (data) {
                        $('#resultado').html('<div class="alert alert-success">Usuario creado con éxito.</div>');
                        // Opcional: Limpiar el formulario después de la creación
                        $('#formCrearUsuario')[0].reset();
                    },
                    error: function () {
                        $('#resultado').html('<div class="alert alert-danger">Hubo un error al crear el usuario.</div>');
                    },
                    complete: function () {
                        $('#overlay').hide(); // Ocultar overlay
                    }
                });
            });
        });
    </script>
}

