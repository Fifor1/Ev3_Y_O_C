@model Ev3_Y_O_C.Models.Movimiento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Asigna un id al formulario para seleccionarlo con AJAX -->
        <form id="createMovimientoForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HerramientaId" class="control-label"></label>
                <select asp-for="HerramientaId" class="form-control" asp-items="ViewBag.HerramientaId"></select>
            </div>

            <div class="form-group">
                <label asp-for="TipoMovimiento" class="control-label"></label>
                <select asp-for="TipoMovimiento" class="form-control" asp-items="@(new SelectList(ViewData["TipoMovimientoList"], "Value", "Text"))"></select>
                <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaMovimiento" class="control-label"></label>
                <input asp-for="FechaMovimiento" class="form-control" />
                <span asp-validation-for="FechaMovimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#createMovimientoForm').submit(function (event) {
                event.preventDefault(); // Evita el envío completo de la página

                $.ajax({
                    url: '@Url.Action("Create", "Movimientos")', // Ruta del controlador
                    type: 'POST',
                    data: $(this).serialize(), // Serializa los datos del formulario
                    success: function (response) {
                        // Muestra un mensaje de éxito o redirige según sea necesario
                        alert("Movimiento creado exitosamente.");
                        window.location.href = '@Url.Action("Index", "Movimiento7s")';
                    },
                    error: function (xhr) {
                        // Muestra un mensaje de error en caso de fallo
                        alert("Error al crear el movimiento. Por favor, verifica los datos e inténtalo nuevamente.");
                    }
                });
            });
        });
    </script>
}
